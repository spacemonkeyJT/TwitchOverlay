{
  "name": "twitchoverlay",
  "module": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/app.ts --outfile=bundle.js",
    "dev": "concurrently \"bun build ./src/app.ts --outfile=bundle.js --watch --no-clear-screen\" \"serve .\""
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "concurrently": "^9.1.0"
  }
}